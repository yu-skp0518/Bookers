<body>

  <div class="flash">
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  </div>

  <h1>Books</h1>
  <table>

    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thread>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id),method: :delete  %></td>
        </tr>
        <% end %>
      </tbody>

  </table>
  <h2>New Book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error_explanation"><%= @book.errors.count %> error prohibited this book from being saved:</div>
       <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %> 
       </ul>
    <% end %>

  <div class="field_with_errors">
    <div class="field">
      <label for="book_title">Title</label>
        <%= f.text_field :title %>
    </div>
  </div>

  <div class="field_with_errors">
    <div class="field">
      <label for="book_body">Body</label>
        <%= f.text_area :body %>
    </div>
  </div>

  <div class="actions">
    <div class="submit">
      <%= f.submit'Create Book' %>
    </div>
  </div>
  <% end %>
</body>