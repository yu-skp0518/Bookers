<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>

    <thread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thread>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><%= link_to "show", book_path(book.id) %></td>
          <td><%= link_to "edit", book_path(book.id) %></td>
          <td><%= link_to "destroy", book_path(book.id) %></td>
        </tr>
        <% end %>
      </tbody>

  </table>
  <h2>New Book</h2>
    <%= form_with model:@book, local:true do |f| %>
  <h4>タイトル</h4>
    <%= f.text_field :title %>

  <h4>本文</h4>
    <%= f.text_area :body %>

    <%= f.submit'Create Book' %>
  <% end %>
</body>