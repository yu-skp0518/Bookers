<body>
    <h1>Editing Book</h1>
     <%= form_with model:@book, local:true do |f| %>
     
        <% if @book.errors.any? %>
          <div class="error_explanation"><%= @book.errors.count %> error prohibited this book from being saved:</div>
           <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %> 
          </ul>
        <% end %>
     
     <div class="field_with_errors">
        <div class="field">
            <label for="book_title">Title</label>
             <%= f.text_field :title %>
        </div>
     </div>

    <div class="field_with_errors">
        <div class="field">
            <label for="book_body">Body</label>
             <%= f.text_area :body %>
        </div>
    </div>

    <div class="actions">
        <div class="submit">
         <%= f.submit'Update Book' %>
        </div>
    </div>
    <% end %>
     <span>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
     </span>

</body>